{% extends "base.html.twig" %}
{% block title 'Binevenue sur le blog' %}
{% block body %}
    {% if posts %}
    <h1 class="text-center pt-4">Les derniers articles</h1>
        {% for post in posts %}
        <div class="col-8 pt-4 mb-3">
        {% include "/post/_post.html.twig" %}
    </div>
{% endfor %}
    {% else %}
        <h2 class="text-center pt-4"> Aucun article n'a été trouvé</h2>
{% endif %}
{% endblock %}
